<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs', { title: 'Productos', stylesheet: 'products/productsList.css'}); %>
    <body >
        <%- include('../partials/header.ejs') %>
        <% if ( usuarioLogueado && usuarioLogueado.email == 'admin@biogarden.com') { %>
        <div class="container list">
            <div class="list-header">
                <h1 class = "titulo">Tus Productos</h1>
                <a href="/products/create"><button>Crear nuevo producto</button></a>
            </div>
            <% for ( product of products) { %>  
            <div class="product-container">
                <img class="imagenListado" src="/uploads/productos/<%= product.image %> "alt="<%= product.name %>"></a>                
                <div class="productosListado">
                    <a href="/products/<%= product.id %>"><p><%= product.name %></p></a>
                    <p>$ <%= product.price %></p>
                    <p><%= product.category %></p>
                    <p class="descripcionProducto"><%= product.description %></p>                 
                </div>
                <div class="actions">
                    <a class="edit" href="/products/<%= product.id %>/edit">
                        <button><i class="fas fa-edit"></i> Editar</button>
                    </a>
                    <form class="delete" action="products/<%= product.id %>?_method=DELETE" method="POST">
                        <button type="submit"><i class="fas fa-trash-alt"></i> Eliminar</button>
                    </form>
                    
                </div>
            </div>
            <% } %>
        </div>  
        <% } else { %>      
        <div class="container list">
            <div class="list-header">
                <h1 class = "titulo">Nuestros productos</h1>
            </div>
            <section>
                <% for ( product of products) { %> 
                    <article>
                        <a href="/products/<%= product.id %>"><img src="/uploads/productos/<%= product.image %> "alt="<%= product.name %>"></a>
                        <div class="item-info">
                            <p class="name"><%= product.name %></p>
                            <p class="price">$<%= product.price %></p>
                        </div>
                    </article>
                <% } %>
            </section>
        </div>  
        <% } %>           
        <%- include('../partials/footer.ejs') %>
    </body>
        
</html>


