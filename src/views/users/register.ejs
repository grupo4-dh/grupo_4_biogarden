

<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <%- include('../partials/head.ejs', { title: 'Crear cuenta', stylesheet: 'users/register.css'}); %>
</head>
<body>
    <%- include('../partials/header.ejs') %>
<div class="container">

  <h2>REGISTRATE</h2>
  <div class = "container-error"><% if (typeof errors != "undefined" ) { %>
    <p class = "error" style="color: red;">ERROR</p>
    <ul>
        <% for (let i=0; i<errors.length;i++){ %>
            <li>
                <%= errors[i].msg%>
            </li>

            <%}%>
    </ul>
    <%}%>
</div>
<form action="" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">Nombre:</label>
        <input type="text" class="form-control" id="name" placeholder="Enter Nombre" name="name">
      </div>
      <div class="form-group">
        <label for="last_name">Apellido:</label>
        <input type="text" class="form-control" id="last_name" placeholder="Enter Apellido" name="last_name">
      </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" value="<%= (typeof datosYaCargados != 'undefined' && !errors.email) ? datosYaCargados.email : ""%>">
    </div>
    <div class="error">
      <small class="error"><%=(locals.errors && errors.email) ? errors.email.msg : ""%></small>
 </div>
    <div class="form-group">
      <label for="pwd">Password:</label>
      <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="password">
    </div>
    <div class="form-group">
        <label for="pwd">Imagen de perfil</label>
        <input type="file" class="form-control" id="avatar" placeholder="Enter Imagen" name="avatar">
      </div>

   
    <button type="submit" class="btn btn-success">Registrarse</button>
  </form>
</div>
<%- include('../partials/footer.ejs') %>

</body>
</html>
